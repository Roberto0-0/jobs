<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Chango&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="stylesheet" href="/css/resume/userSentResume/style.css">
    <title>Jobs</title>
</head>
<body>
    <header>
        <div class="container">
          <a href="/" class="logo">Jobs</a>
          <nav class="nav">
            <ul>
                <% if(user) { %>
                    <li>
                        <i class="ph-fill ph-key-return"></i>
                        <a href="/profile">back</a>
                    </li>
                <% } else { %>
                    <li>
                        <i class="ph-fill ph-key-return"></i>
                        <a href="/">back</a>
                    </li>
                <% } %>
            </ul>
          </nav>
          <div class="menu">
            <i class="ph-bold ph-list"></i>
          </div>
        </div>
    </header>
    <main>
        <% if(success_message.length > 0) { %>
            <div class="notification"><span class="message"><%= success_message %></span><i class="ph-bold ph-checks"></i></div>
        <% } %>
        <div class="container">
            <ul class="resumes-list">
                <% data.map((resume) => { %>
                    <li class="li">
                        <div class="post-info">
                            <a href="/resume/post/page/<%= resume.post.id %>/<%= resume.company_id %>">
                                <h1 class="vacancy"><%= resume.post.vacancy %></h1>
                                <h2 class="company-name">
                                    <%= resume.post.company_name %>
                                    <i class="ph-fill ph-seal-check"></i>
                                </h2>
                            </a>
                        </div>
                        <div class="result">
                            <% if(resume.option == "waiting") { %> 
                                <span>
                                    <i class="ph-light ph-clock-countdown"></i>
                                    waiting
                                </span>
                                <div class="option-area">
                                    <a href=""><i class="ph-light ph-pencil-simple"></i></a>
                                    <a href="/resume/delete/<%= user.id %>/<%= resume.id %>"><i class="ph-light ph-prohibit"></i></a>
                                </div>
                            <% } else if(resume.option == "selected") { %>
                                <span>
                                    <i class="ph-light ph-handshake"></i>
                                    selected
                                </span>
                                <div class="option-area">
                                    <a href=""><i class="ph-light ph-check"></i></a>
                                </div>
                            <% } else if(resume.option == "notSelected") { %>
                                <span>
                                    <i class="ph ph-warning-circle"></i>
                                    not selected
                                </span>
                                <div class="option-area">
                                    <a href=""><i class="ph-light ph-check"></i></a>
                                </div>
                            <% } %> 
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
    </main>
    <footer>
    <div class="container">
        <p>&copy; 2022 <a href="https://pt.wikipedia.org/wiki/Direito_autoral">Copyright</a>â„¢ All rights reserved.</p>
    </div>
    </footer>
    <script src="/js/menu/main.js"></script>
    <script src="/js/resume/userSentResume/main.js"></script>
</body>
</html>