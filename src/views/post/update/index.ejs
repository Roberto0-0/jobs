<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://unpkg.com/phosphor-icons"></script>
  <link rel="stylesheet" href="/css/post/update/style.css">
  <title>Jobs</title>
</head>
<body>
  <% for(var i=0;i < error_message.length;i++) { %>
    <div class="error_message"><%= error_message[i] %></div>
  <% } %>
  <div class="container">
    <div class="logoname">
      <h2>Job</h2>
    </div>
    <% if(user) { %>
      <% if(data) { %>
        <form action="/post/update/<%= data.id %>/<%= companyId %>/<%= user.id %>" method="POST">
          <div class="input">
            <i class="ph-buildings-fill"></i>
            <select name="companyName" class="select">
              <option disabled>Company</option>
              <% if(data.company_name) { %>
                <option value="<%= data.company_name %>" selected ><%= data.company_name %></option>
              <% } %>
            </select>
          </div>
          <div class="input">
            <i class="ph-cardholder-fill"></i>
            <input type="text" name="vancancy" id="" placeholder="vancancy" value="<%= data.vancancy %>" autocomplete="off" required>
          </div>
          <div class="input">
            <i class="ph-map-trifold-fill"></i>
            <select name="location" class="select">
              <option selected disabled>Location</option>
              <% if(data.location) { %>
                <option value="<%= data.location %>"><%= data.location %></option>
              <% } %>
            </select>
          </div>
          <div class="input">
            <i class="ph-currency-dollar-fill"></i>
            <input type="number" name="salary" placeholder="Salary" value="<%= data.salary %>" required>
          </div>
          <div class="input">
            <i class="ph-fill ph-user-circle-plus"></i>
            <input type="number" name="vacancies" placeholder="Vacancies" value="<%= data.vacancies %>"  required>
          </div>
          <textarea name="information" id="" cols="30" rows="10" placeholder="more information here!"><%= data.information %></textarea>
    
          <button>send</button>
        </form>
     <% } %>
    <% } %>
  </div>

  <script src="/js/post/update/main.js"></script>
</body>
</html>