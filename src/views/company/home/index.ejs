<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Chango&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/@phosphor-icons/web"></script>
  <link rel="stylesheet" href="/css/company/home/style.css">
  <title>Jobs</title>
</head>
<body>
  <% if(user) { %>
    <% if(data) { %>
      <header>
        <div class="container">
          <a href="#" class="company-name"><span><%= data.company %></span><i class="ph-fill ph-seal-check"></i></a>
          <nav class="nav">
            <ul>
                <li>
                  <i class="ph-fill ph-briefcase"></i>
                  <a href="/jobs">jobs</a>
                </li>
                <li>
                  <i class="ph-fill ph-note"></i>
                  <a href="/post/create/<%= user.id %>/<%= data.id %>">post</a>
                </li>
                <li>
                    <i class="ph-fill ph-key-return"></i>
                    <a href="/dashboard">dashboard</a>
                </li>
            </ul>
          </nav>
          <div class="menu">
            <i class="ph-bold ph-list"></i>
          </div>
        </div>
      </header>
      </div>
      <main>
        <% if(success_message.length > 0) { %>
          <div class="notification"><span class="message"><%= success_message %></span><i class="ph-bold ph-checks"></i></div>
        <% } %>
        <div class="container">
          <div class="firstBlock">
            <div class="postInfo">
              <h2>Posts information</h2>
            </div>
            <ul>
              <li>
                  <% if(data.post.length > 0) { %>
                    <a href="/company/posts/<%= userId %>/<%= data.id %>">
                      <div class="illustration">
                        <i class="ph-fill ph-note-blank"></i>
                      </div>
                      <div class="info">
                        <span class="value"><%= data.post.length %></span>
                        <p>Posts</p>
                      </div>        
                    </a>
                  <% } else { %>
                    <a href="/post/create/<%= user.id %>/<%= data.id %>">
                      <div class="illustration">
                        <i class="ph-fill ph-note-blank"></i>
                      </div>
                      <div class="info">
                        <span class="value"><%= data.post.length %></span>
                        <p>Posts</p>
                      </div>        
                    </a>
                  <% } %>
              </li>
              <li>
                <a href="/company/likes/<%= data.id %>">
                  <div class="illustration">
                    <i class="ph-fill ph-arrow-fat-lines-up"></i>
                  </div>
                  <div class="info">
                    <span class="value"><%= likes %></span>
                    <p>Push</p>
                  </div>        
                </a>
              </li>
              <li>
                <a href="/company/likes/<%= data.id %>">
                  <div class="illustration">
                    <i class="ph-fill ph-read-cv-logo"></i>
                  </div>
                  <div class="info">
                    <span class="value"><%= likes %></span>
                    <p>Resumes</p>
                  </div>        
                </a>
              </li>
            </ul>
          </div>
          <div class="secondBlock">
            <img src="../../assets/jobs/undraw_financial_data_re_p0fl.svg" alt="">
          </div>
        </div>
      </main>
       <footer>
         <div class="container">
           <p>
             &copy; 2022 <a href="https://pt.wikipedia.org/wiki/Direito_autoral">Copyright</a>â„¢ All rights reserved.
           </p>
         </div>
       </footer>
     <% } %>
  <% } %>
  <script src="/js/menu/main.js"></script>
  <script src="/js/company/home/main.js"></script>
</body>
</html>
